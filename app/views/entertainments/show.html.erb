<div class="welcome">
<h1>This is the <strong><%= @entertainment.name %></strong> entertainment show page!</h1>

<b>Address:</b>
<div class="text_color"><%= @entertainment.address %><br></div>
<br>
<b>Rating:</b>
<div class="text_color"><%= @entertainment.rating %><br></div>
<b>Description:</b>
<div class="text_color"><%= @entertainment.description %><br></div>
<br>
<b>Reviews:</b></br>
<% @entertainment.entertainment_reviews.each do |entertainment_review| %>
    <ul>
    <b><%= entertainment_review.user.username %></b>
    <div class="text_color"><%= entertainment_review.user_review %></div>
    </ul>
<% end %>

<h2>Have you been here? Leave a review: </h2>

    <%= form_for @entertainment_review do |f| %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <%= f.hidden_field :entertainment_id, value: @entertainment.id %>
        <%= f.text_area :user_review %><br>
        <%= f.submit%>
    <% end %>
</div>